{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_body_script %}
    {% set component = context.paymentMethod.customFields.component %}

    {% if activeRoute == 'frontend.checkout.confirm.page' || activeRoute == 'frontend.account.edit-order.page' %}
        {% if component == true %}
            <script src="https://pay.multisafepay.com/sdk/components/v2/components.js"></script>
        {% endif %}
        {% if page.extensions.multisafepay.is_mybank_direct %}
            <script src="https://unpkg.com/slim-select@latest/dist/slimselect.js"></script>
            <script>
                new SlimSelect({
                    select: '#issuers-mybank'
                })
            </script>
        {% endif %}
    {% endif %}
    {{ parent() }}
{% endblock %}
