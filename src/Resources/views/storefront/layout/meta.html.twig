{% sw_extends '@Storefront/storefront/layout/meta.html.twig' %}

{% block layout_head_stylesheet %}
    {{ parent() }}
    {% set component = context.paymentMethod.customFields.component %}

    {% if activeRoute == 'frontend.checkout.confirm.page' || activeRoute == 'frontend.account.edit-order.page' %}
        {% if component == true %}
            <link href="https://pay.multisafepay.com/sdk/components/v2/components.css" rel="stylesheet" />
        {% endif %}
        {% if page.extensions.multisafepay.is_mybank_direct %}
            <link href="https://unpkg.com/slim-select@latest/dist/slimselect.css" rel="stylesheet" />
        {% endif %}
    {% endif %}
{% endblock %}
