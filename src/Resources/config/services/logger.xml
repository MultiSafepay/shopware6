<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:monolog="http://symfony.com/schema/dic/monolog"
    xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd http://symfony.com/schema/dic/monolog https://symfony.com/schema/dic/monolog/monolog-1.0.xsd">


    <monolog:config>
        <monolog:channel>multisafepay_general</monolog:channel>
        <monolog:handler name="multisafepay_general"
        type="rotating_file"
        path="%kernel.logs_dir%/multisafepay.log"
        level="debug"
        bubble="false"
        max-files="7"
        >
            <monolog:channels>
                <monolog:channel>multisafepay_general</monolog:channel>
            </monolog:channels>
        </monolog:handler>
    </monolog:config>

</container>
